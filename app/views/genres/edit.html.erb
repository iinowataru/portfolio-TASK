<%= render 'layouts/header' %>
<div class="container text-center center-block">
 <div class="row offset-0">
  <div class="mx-auto">
   <br>
   <h1>ジャンル編集</h1>
   <%= form_with model: @genre, local: true do |f| %>
    <%= f.label :name, "ジャンル名" %>
    <%= f.text_field :name, placeholder: "ジャンル名" %>
    <%= f.submit '変更を保存する', class: 'btn btn-success' %>
   <% end %>
   <br>
  </div>
 </div>
</div>
<%= render 'layouts/footer' %>