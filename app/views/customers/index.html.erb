 <%= render 'layouts/header' %>
 <div class="container-fluid col-lg-10">
 <div class="row">
  <div class="col-md-3 mb-3">
  </div>
 </div>
  <h1>会員一覧</h1>
  <% @customers.each do |customer| %>
  <table class = 'table'>
   <tr>
     <td></td><%= attachment_image_tag customer, :image, :fill, 100, 100, format: 'jpeg' %></td>
     <th>名前</th><th></th>
     <td><%= customer.last_name %></td>
     <td><%= customer.first_name %></td>
     <td><%= link_to "詳細ページ", customer_path(customer), class:'btn btn-success' %></td>
   </tr>
  <% end %>
  </table>
  <%= form_with model: @customer, local: true do |f| %>
  <table class= 'table'>
  <h3>会員情報登録</h3>
  <tbody>
   <tr>
    <th>会員画像</th>
    <td><%= f.attachment_field :image %></td>
   </tr>
   <tr>
    <th>氏名</th>
    <td><%= f.text_field :last_name, autofocus: true, id:"inputName", placeholder:"田中" %></td>
    <td><%= f.text_field :first_name, autofocus: true, id:"inputName", placeholder:"太郎" %></td>
   </tr>
    <td><%= f.submit "内容を保存", class:'btn btn-success' %></td>
    <% end %>
  </tbody>
  
    
  </table>
</div>
<%= render 'layouts/footer' %>