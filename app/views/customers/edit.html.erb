<%= render 'layouts/header' %>
<div class="container-fluid col-lg-10">
 <div class="row">
  <div class="col-md-10 mb-3">
  <h1>会員情報登録</h1>
  <%= form_with model: @customer, local:true do |f| %>
 <table class='table table-hover table-inverse'>
  <thead>
  <tr>
  　<th>会員画像</th>
  　<th>会員名（姓）</th>
  　<th>会員名（名）</th>
  </tr>
  </thead>
  
  <tbody>
   <tr>
    <td><%= f.attachment_field :image %></td>
    <td><%= f.text_field :last_name, autofocus: true, id:"inputName", placeholder:"田中" %></td>
    <td><%= f.text_field :first_name, autofocus: true, id:"inputName", placeholder:"太郎" %></td>
   </tr>
  </tbody>
   <tr>
    <td><%= f.submit "変更を保存", class:'btn btn-success' %></td>
   </tr> 
 </table>
    <% end %>
   </div>
  </div>
</div>
 <%= render 'layouts/footer' %>