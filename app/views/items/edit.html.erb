<div class="container- px-6 px-sm-0">
 <div class='row'>
   <%= render 'layouts/header' %>

　　<h1>登録商品編集</h1>
　 <%= form_with model: @item, local: true do |f| %>
　  <th>商品画像</th>
　  <td><%= f.attachment_field :image %></td>
　  <th>商品名</th>
　  <td><%= f.text_field :name %></td>
　  <th>JANコード</th>
　  <td><%= f.text_field :jan_code %></td>
　  <th>ジャンル</th>
　  <td>
     <label class="radio_button">
     <%= f.collection_select(:genre_id, @genres, :id, :name) %>
     </label>
    </td>
　  <%= f.submit '商品登録', class:'btn btn-success' %>
　  <% end %>
 </div>
    <%= render 'layouts/footer' %>
</div>
 